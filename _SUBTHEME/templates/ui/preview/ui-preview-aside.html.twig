
<ul class="pl-0 mt-0 list-none">
  {% for section in sections %}
  <li class="mb-0">
    <a href="#{{ section.id }}">
      <h4 class="px-20 py-10 font-bold hover|bg-primary hover|text-white sticky top-0 bg-white">{{ section.title }}</h4>
    </a>

    {% if section.items %}
      <ul class="mt-0 pl-0 list-none">
        {% for item in section.items %}
          <li class="mb-0">
            <a href="#{{ item.id }}">
              <h5 class="px-30 py-5 hover|bg-primary hover|text-white">{{ item.title }}</h5>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </li>
  {% endfor %}
</ul>