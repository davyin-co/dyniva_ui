{#
/**
 * - extends base theme components body
 * - custom sub theme header, also can add new components
 */
#}
{% extends '@dyniva_ui/ui/modules/ui-action.html.twig' %}

{# 覆写dyniva_ui的header #}
{% block header %}
  {% include '@SUBTHEME/ui/preview/ui-preview-header.html.twig' %}
{% endblock %}

{# 如果需要拓展内容 #}
{% set extend_sections = [
  {
    id: 'section id',
    title: 'section title',
    items: [
      {
        id: 'item id',
        title: 'item title',
        rule: 'item rule',
        demoClass: 'class push in dy-component-demo',
        rowClass: 'row',
        libraries: [
          'attach_libraries list'
        ],
        templates: [
          {
            url: 'module url',
            gridClass: 'col class(col-xs-6,col-md-3,etc.)',
            param: { module_params: true }
          }
        ],
        descs: [
          {
            code: 'class-example',
            text: 'desc-example'
          },
        ]
      },
    ]
  },
] %}

{# 如果需要拓展内容 #}
{% block extend_aside %}
  {% for section in extend_sections  %}
    {% include "@SUBTHEME/ui/preview/ui-preview-aside.html.twig" with { sections: extend_sections } %}
  {% endfor %}
{% endblock %}
{# 如果需要拓展内容 #}
{% block extend_section %}
  {% for section in extend_sections  %}
    {% include "@SUBTHEME/ui/preview/ui-preview-section.html.twig" with section %}
  {% endfor %}
{% endblock %}

{# 覆写dyniva_ui的footer #}
{% block footer %}
  {% include '@SUBTHEME/ui/preview/ui-preview-footer.html.twig' %}
{% endblock %}
