{{ attach_library('dyniva_ui/sidebar') }}
<div class="dy-sidebar-1-0 sidebar-menu-v1 js-sidebar-menu clearfix">
  <ul class="menu nav-menu">
    {%- for item in items | default([
      {
        title: '首页'
      },
      {
        title: '学院简介',
        active: true,
        child: [
          {
            title: '学院简介',
            active: true,
          },
          {
            title: '使命愿景'
          },
          {
            title: '历史沿革'
          },
          {
            title: '学校领导'
          },
          {
            title: '组织架构'
          },
        ]
      },
      {
        title: '教育教学',
        child: [
          {
            title: '学科分布'
          },
          {
            title: '师资队伍'
          },
          {
            title: '院系列表'
          },
          {
            title: '院系设置'
          }
        ]
      },
      {
        title: '合作交流'
      },
      {
        title: '公共服务'
      },
      {
        title: '校园生活'
      }
    ]) ~%}
    <li class="menu-item {% if item.child %}expanded {% endif %}{% if item.active %}active{% endif %}">
      <a href="/en" class="{% if item.child %}menu-collapse{% endif %}" title="{{ item.title }}">{{ item.title }}</a>
      {%- if item.child ~%}
      <ul class="menu level-menu {% if item.active %}active-submenu{% endif %}">
        {%- for itemChild in item.child ~%}
        <li class="menu-item {% if itemChild.active %}active-item active{% endif %}">
          <a class="{% if itemChild.active %}is-active{% endif %}">{{ itemChild.title }}</a>
        </li>
        {%- endfor ~%}
      </ul>
      {%- endif ~%}
    </li>
    {%- endfor ~%}
  </ul>
</div>
