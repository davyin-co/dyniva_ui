{# note: header.html.twig must be include in header block, the sub theme be able to override header #}
{% block header %}
  {% include '@dyniva_ui/ui/pages/header.html.twig' %}
{% endblock %}

<div id="wall" class="page-title promo">
  <div class="inner">
    <h1 class="page-title">Banner</h1>
    <h5 class="title">Banner横幅组件</h5>
  </div>
</div>

<div class="panel panel-ui">
  <section class="dy-components" id="tooltip">
    <h2 class="section-header inner">Banner</h2>

    <div class="section-item title-box">
      <h4 class="title inner">基本实例</h4>
      <p class="rules inner"></p>
      <div class="dy-components-demo">
        <div class="banner-v1"
             style='background-image: url("/themes/custom/dyniva_ui/templates/ui/images/media/banner-02.jpg")'>
        </div>
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
           aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <div>
            {% set blocks = '
<div class="banner-v1" style="background-image: url(...)">
                  ' %}
            <pre class="prettyprint lang-html">
                  {{ blocks }}
                  </pre>
          </div>
          <div class="dy-components-desc">
            <table class="table table-full">
              <thead>
              <tr>
                <th>属性</th>
                <th>说明</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td><code>属性</code></td>
                <td>说明</td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="section-item title-box">
      <h4 class="title inner">使用规则</h4>
      <p class="rules inner">高宽比1：5，移动端3：4，等比例缩放; 纯色背景的情况下，也可以放文字，保持垂直居中</p>
      <div class="dy-components-demo">
        <div class="banner-v1 t-c"
             style='background-image: url("/themes/custom/dyniva_ui/templates/ui/images/media/banner-03.jpg")'>
          <div class="banner-inner">
            <div class="banner-content">
              <h2 class="banner-title">招生就业</h2>
              <div class="banner-desc">如果你是一位愿意代表中国走向世界的优秀学子，愿意作为专业人才担当中外交流的使者，欢迎与我们共度一段青春时光。</div>
            </div>
          </div>
        </div>
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
           aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <div>
            {% set blocks = '
<div class="banner-v1 t-c" style="background-image: url("...")">
  <div class="banner-inner">
    <div class="banner-content">
      <h2 class="banner-title">...</h2>
      <div class="banner-desc">...</div>
    </div>
  </div>
</div>
                  ' %}
            <pre class="prettyprint lang-html">
                  {{ blocks }}
                  </pre>
          </div>
          <div class="dy-components-desc">
            <table class="table table-full">
              <thead>
              <tr>
                <th>属性</th>
                <th>说明</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td><code>属性</code></td>
                <td>说明</td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    {% block tooltip %}{% endblock %}
  </section>

  {% block section %}{% endblock %}
</div>

{# note: ui-footer.html.twig must be include in footer block, the sub theme be able to override footer #}
{% block footer %}
  {% include directory ~ '@dyniva_ui/ui/pages/ui-footer.html.twig' %}
{% endblock %}
