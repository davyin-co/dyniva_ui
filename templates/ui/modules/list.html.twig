{# note: header.html.twig must be include in header block, the sub theme be able to override header #}
{% block header %}
  {% include '@dyniva_ui/ui/pages/header.html.twig' %}
{% endblock %}

<div id="wall" class="page-title promo">
  <div class="inner">
    <h1 class="page-title">文字列表组件</h1>
    <h5 class="title"></h5>
  </div>
</div>
<div class="panel panel-ui">
  <section class="dy-components" id="text-list">
    <h2 class="section-header inner">文字列表组件</h2>

    <div class="section-item title-box">
      <h4 class="title inner">默认样式</h4>
      <div class="dy-components-demo inner">
        <ul class="dy-list">
          <li><a href="#">项目列表 1</a></li>
          <li><a href="#">项目列表 2</a></li>
          <li><a href="#">项目列表 3</a></li>
          <li><a href="#">项目列表 4</a></li>
          <li><a href="#">项目列表 5</a></li>
        </ul>
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
           aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <div>
            {% set blocks = '
<ul class="dy-list">
  <li><a href="#">项目列表 1</a></li>
  <li><a href="#">项目列表 2</a></li>
  <li><a href="#">项目列表 3</a></li>
  <li><a href="#">项目列表 4</a></li>
  <li><a href="#">项目列表 5</a></li>
</ul>' %}
            <pre class="prettyprint lang-html">
                    {{ blocks }}
                  </pre>
                </div>
                <div class="dy-components-desc">
                  <table class="table table-full">
                    <thead>
                    <tr>
                      <th>Class</th>
                      <th>说明</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                      <td><code>.dy-list</code></td>
                      <td>列表组件类名</td>
                    </tr>
                    </tbody>
                  </table>
                </div>
        </div>
      </div>
    </div>

    <div class="section-item title-box">
      <h4 class="title inner">带有分隔线</h4>
      <p class="rules inner">组件类名 <code>.dy-list.dy-list-divider</code></p>
      <div class="dy-components-demo inner">
        <ul class="dy-list dy-list-divider">
          <li><a href="#">项目列表 1</a></li>
          <li><a href="#">项目列表 2</a></li>
          <li><a href="#">项目列表 3</a></li>
          <li><a href="#">项目列表 4</a></li>
          <li><a href="#">项目列表 5</a></li>
        </ul>
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
           aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <div>
            {% set blocks = '
<ul class="dy-list dy-list-divider">
  <li><a href="#">项目列表 1</a></li>
  <li><a href="#">项目列表 2</a></li>
  <li><a href="#">项目列表 3</a></li>
  <li><a href="#">项目列表 4</a></li>
  <li><a href="#">项目列表 5</a></li>
</ul>' %}
            <pre class="prettyprint lang-html">
                      {{ blocks }}
                    </pre>
                  </div>
                  <div class="dy-components-desc">
                    <table class="table table-full">
                      <thead>
                      <tr>
                        <th>Class</th>
                        <th>说明</th>
                      </tr>
                      </thead>
                      <tbody>
                      <tr>
                        <td><code>.dy-list</code></td>
                        <td>组件类名</td>
                      </tr>
                      <tr>
                        <td><code>.dy-list-divider</code></td>
                        <td>带有分隔线的风格样式</td>
                      </tr>
                      </tbody>
                    </table>
                  </div>
        </div>
      </div>
    </div>

    <div class="section-item title-box">
      <h4 class="title inner">带条纹风格</h4>
      <p class="rules inner">使用规则</p>
      <div class="dy-components-demo inner">
        <ul class="dy-list dy-list-striped">
          <li><a href="#">项目列表 1</a></li>
          <li><a href="#">项目列表 2</a></li>
          <li><a href="#">项目列表 3</a></li>
          <li><a href="#">项目列表 4</a></li>
          <li><a href="#">项目列表 5</a></li>
        </ul>
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
           aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <div>
            {% set blocks = '
<ul class="dy-list dy-list-striped">
  <li><a href="#">项目列表 1</a></li>
  <li><a href="#">项目列表 2</a></li>
  <li><a href="#">项目列表 3</a></li>
  <li><a href="#">项目列表 4</a></li>
  <li><a href="#">项目列表 5</a></li>
</ul>' %}
            <pre class="prettyprint lang-html">
                      {{ blocks }}
                    </pre>
                  </div>
                  <div class="dy-components-desc">
                    <table class="table table-full">
                      <thead>
                      <tr>
                        <th>Class</th>
                        <th>说明</th>
                      </tr>
                      </thead>
                      <tbody>
                      <tr>
                        <td><code>.dy-list</code></td>
                        <td>组件类名</td>
                      </tr>
                      <tr>
                        <td><code>.dy-list-striped</code></td>
                        <td>带有条纹风格</td>
                      </tr>
                      </tbody>
                    </table>
                  </div>
        </div>
      </div>
    </div>

    <div class="section-item title-box">
      <h4 class="title inner">添加Badge</h4>
      <p class="rules inner">在<code>li</code>里面添加 <code>span.badge</code>，注意：在HTML中，<code>.badge</code>元素要在其他兄弟元素的前面。
      </p>
      <div class="dy-components-demo inner">
        <ul class="dy-list dy-list-striped">
          <li><span class="badge">10</span><a href="#">项目列表</a></li>
          <li><span class="badge">10</span><span class="badge">26</span><a href="#">项目列表</a></li>
          <li><span class="badge badge-primary">YES</span><a href="#">项目列表</a></li>
          <li><span class="badge badge-success">YES</span><a href="#">项目列表</a></li>
          <li><span class="badge badge-warning">NO</span><a href="#">项目列表</a></li>
          <li><span class="badge badge-error">NO</span><a href="#">项目列表</a></li>
        </ul>
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
           aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <div>
            {% set blocks = '
<ul class="dy-list dy-list-striped">
  <li><span class="badge">10</span><a href="#">项目列表</a></li>
  <li><span class="badge">10</span><span class="badge">26</span><a href="#">项目列表</a></li>
  <li><span class="badge badge-primary">YES</span><a href="#">项目列表</a></li>
  <li><span class="badge badge-success">YES</span><a href="#">项目列表</a></li>
  <li><span class="badge badge-warning">NO</span><a href="#">项目列表</a></li>
  <li><span class="badge badge-error">NO</span><a href="#">项目列表</a></li>
</ul>
            ' %}
            <pre class="prettyprint lang-html">
              {{ blocks }}
            </pre>
          </div>
          <div class="dy-components-desc">
            <table class="table table-full">
              <thead>
              <tr>
                <th>Class</th>
                <th>说明</th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td><code>.badge</code></td>
                <td>默认灰色背景，白色字体</td>
              </tr>
              <tr>
                <td><code>.badge.badge-primary</code></td>
                <td>主色样式</td>
              </tr>
              <tr>
                <td><code>.badge.badge-success</code></td>
                <td>成功类风格</td>
              </tr>
              <tr>
                <td><code>.badge.badge-warning</code></td>
                <td>警告类风格</td>
              </tr>
              <tr>
                <td><code>.badge.badge-error</code></td>
                <td>错误类风格</td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    {% block textList %}{% endblock %}
  </section>

  {% block section %}{% endblock %}
</div>

