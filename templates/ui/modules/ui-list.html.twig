{# note: header.html.twig must be include in header block, the sub theme be able to override header #}
{% block header %}
  {% include '@dyniva_ui/ui/pages/header.html.twig' %}
{% endblock %}

<div id="wall" class="page-title promo">
  <div class="inner">
    <h1 class="page-title">列表</h1>
    <h5 class="title"></h5>
  </div>
</div>

<div class="panel panel-ui">
  <section class="dy-components" id="lists">
    <h2 class="section-header inner">列表</h2>

    <div class="section-item title-box" id="dy-list-1-0">
      <h4 class="title inner">列表1.0</h4>
      <p class="rules inner">有标题、描述、图片和时间的列表</p>
      <div class="dy-components-demo outside-tb">
        {% include "@dyniva_ui/ui/modules/list/dy-list-1-0.html.twig" %}
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
            aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <pre class="prettyprint lang-html">
            {%- filter escape -%}
              {% include "@dyniva_ui/ui/modules/list/dy-list-1-0.html.twig" %}
            {%- endfilter -%}
          </pre>
          <div class="dy-components-desc">
            <table class="table table-full">
              <thead>
                <tr>
                  <th>属性</th>
                  <th>说明</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><code>.dy-list-wrapper</code></td>
                  <td>列表容器</td>
                </tr>
                <tr>
                  <td><code>.dy-list-1-0</code></td>
                  <td>列表1.0</td>
                </tr>
                <tr>
                  <td><code>.list-body</code></td>
                  <td>列表文字内容</td>
                </tr>
                <tr>
                  <td><code>.has-media</code></td>
                  <td>有图片添加此类，不添加表示文字铺满</td>
                </tr>
                <tr>
                  <td><code>.list-media</code></td>
                  <td>列表图片或</td>
                </tr>
                <tr>
                  <td><code>hr</code></td>
                  <td>两个item的分割线</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    {# end section #}

    <div class="section-item title-box" id="dy-list-1-1">
      <h4 class="title inner">列表1.1</h4>
      <p class="rules inner">只有标题的列表</p>
      <div class="dy-components-demo outside-tb">
        {% include "@dyniva_ui/ui/modules/list/dy-list-1-1.html.twig" %}
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
           aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <pre class="prettyprint lang-html">
            {%- filter escape -%}
              {% include "@dyniva_ui/ui/modules/list/dy-list-1-1.html.twig" %}
            {%- endfilter -%}
          </pre>
          <div class="dy-components-desc">
            <table class="table table-full">
              <thead>
                <tr>
                  <th>属性</th>
                  <th>说明</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><code>.dy-list-wrapper</code></td>
                  <td>列表容器</td>
                </tr>
                <tr>
                  <td><code>.dy-list-1-1</code></td>
                  <td>列表1.1</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="section-item title-box" id="dy-list-2-0">
      <h4 class="title inner">列表2.0</h4>
      <p class="rules inner">一行排列，hover有图片显示</p>
      <div class="dy-components-demo outside-tb">
        {% include "@dyniva_ui/ui/modules/list/dy-list-2-0.html.twig" %}
      </div>
      <div class="dy-components-markup inner">
        <a class="btn btn-primary expand-code collapsed" role="button" data-toggle="collapse" aria-expanded="false"
            aria-controls="collapseCode">
          <i class="icon">&#xe818;</i> 开发说明
        </a>
        <div class="collapse">
          <pre class="prettyprint lang-html">
            {%- filter escape -%}
              {% include "@dyniva_ui/ui/modules/list/dy-list-2-0.html.twig" %}
            {%- endfilter -%}
          </pre>
          <div class="dy-components-desc">
            <table class="table table-full">
              <thead>
                <tr>
                  <th>属性</th>
                  <th>说明</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><code>.dy-list-wrapper</code></td>
                  <td>列表容器</td>
